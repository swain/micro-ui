{
  "extends": "@lifeomic/typescript-config",
  "include": ["src", "test"],
  "exclude": ["node_modules", "test/child-app/dist"],
  "compilerOptions": {
    "types": ["vitest/globals"],
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["DOM", "esnext"],
    "jsx": "react",
    "outDir": "dist",
    "inlineSources": false,
    "inlineSourceMap": false,
    "esModuleInterop": false,
    "declaration": true,
    "skipLibCheck": true
  }
}
